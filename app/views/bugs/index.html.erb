<div>
  <div>
    <h1>
      List of all bugs
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new bug
    </h2>

    <form action="/insert_bug" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="photo_box">
          Photo
        </label>

        <input type="text" id="photo_box" name="query_photo">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <button>
        Create bug
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Photo
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_bugs.each do |a_bug| %>
      <tr>
        <td>
          <%= a_bug.id %>
        </td>

        <td>
          <%= a_bug.name %>
        </td>

        <td>
          <%= a_bug.photo %>
        </td>

        <td>
          <%= a_bug.description %>
        </td>

        <td>
          <%= time_ago_in_words(a_bug.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_bug.updated_at) %> ago
        </td>

        <td>
          <a href="/bugs/<%= a_bug.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
