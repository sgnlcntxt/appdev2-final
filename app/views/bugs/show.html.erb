<div>
  <div>
    <h1>
      Bug #<%= @the_bug.id %> details
    </h1>

    <div>
      <div>
        <a href="/bugs">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_bug/<%= @the_bug.id %>">
          Delete bug
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_bug.name %>
      </dd>

      <dt>
        Photo
      </dt>
      <dd>
        <%= @the_bug.photo %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_bug.description %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_bug.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_bug.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit bug
    </h2>

    <form action="/modify_bug/<%= @the_bug.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_bug.name %>">
      </div>

      <div>
        <label for="photo_box">
          Photo
        </label>

        <input type="text" id="photo_box" name="query_photo" value="<%= @the_bug.photo %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_bug.description %>">
      </div>

      <button>
        Update bug
      </button>
    </form>
  </div>
</div>

<hr>
