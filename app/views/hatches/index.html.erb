<div>
  <div>
    <h1>
      List of all hatches
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new hatch
    </h2>

    <form action="/insert_hatch" method="post">
      <div>
        <label for="bug_id_box">
          Bug
        </label>

        <input type="text" id="bug_id_box" name="query_bug_id">
      </div>

      <div>
        <label for="start_date_box">
          Start date
        </label>

        <input type="date" id="start_date_box" name="query_start_date">
      </div>

      <div>
        <label for="end_date_box">
          End date
        </label>

        <input type="text" id="end_date_box" name="query_end_date">
      </div>

      <div>
        <label for="waterbody_id_box">
          Waterbody
        </label>

        <input type="text" id="waterbody_id_box" name="query_waterbody_id">
      </div>

      <div>
        <label for="minimum_size_box">
          Minimum size
        </label>

        <input type="text" id="minimum_size_box" name="query_minimum_size">
      </div>

      <div>
        <label for="maximum_size_box">
          Maximum size
        </label>

        <input type="text" id="maximum_size_box" name="query_maximum_size">
      </div>

      <button>
        Create hatch
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Bug
        </th>

        <th>
          Start date
        </th>

        <th>
          End date
        </th>

        <th>
          Waterbody
        </th>

        <th>
          Minimum size
        </th>

        <th>
          Maximum size
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_hatches.each do |a_hatch| %>
      <tr>
        <td>
          <%= a_hatch.id %>
        </td>

        <td>
          <%= a_hatch.bug_id %>
        </td>

        <td>
          <%= a_hatch.start_date %>
        </td>

        <td>
          <%= a_hatch.end_date %>
        </td>

        <td>
          <%= a_hatch.waterbody_id %>
        </td>

        <td>
          <%= a_hatch.minimum_size %>
        </td>

        <td>
          <%= a_hatch.maximum_size %>
        </td>

        <td>
          <%= time_ago_in_words(a_hatch.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_hatch.updated_at) %> ago
        </td>

        <td>
          <a href="/hatches/<%= a_hatch.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
